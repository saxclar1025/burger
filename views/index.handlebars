<div>
  <h1 class="text-center">Eat Da Burger!</h1>
  
  <div class="row justify-content-center">
    <div class="col-4">
      <img src="https://gallery.yopriceville.com/var/resizes/Free-Clipart-Pictures/Fast-Food-PNG-Clipart/Hamburger_PNG_Vector_Clipart_Picture.png?m=1507172108" class="img-fluid">
    </div>
  </div>
  
  <div class="row">
    <div id="create-div" class="col-12 col-md-4 justify-content-center card">
      <h3>Order a new burger</h3>
      <form id="create-burger-form">
        <input type="text" name="burger-name" placeholder="cheeseburger">
        <input type="submit" name="create-burger-submit">
      </form>
    </div>

    <div id="available-div" class="col-12 col-md-4 float-left justify-content-center card">
      <h3>Available Burgers</h3>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>{{burger_name}} <button burgerId="{{id}}">Devour</button></li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div id="eaten-div" class="col-12 col-md-4 float-right justify-content-center card">
      <h3>Devoured Burgers</h3>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>{{burger_name}}</li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>